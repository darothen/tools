[user]
	name = Daniel Rothenberg
	email = darothen@mit.edu
[core]
	editor = emacs
	excludesfile = /Users/daniel/.gitignore_global
[pull]
	rebase = true
[alias]
	co = checkout
	ci = commit
	br = branch

	# verbose pull
	pv = pull -v

	# friendly statuses
	st = status -sb

	# Add all unstaged changes/removals and commit. Just need to pass message
	# example: git ac 'My message'
	ac = !git add -A && git commit -m
	
	# Pretty log
	lg = log --decorate --stat --graph --pretty=format:'%C(yellow)%h%Creset (%ar - %Cred%an%Creset), %s%n'
[color]
	ui = auto
	branch = auto
	interactive = auto
	diff = auto
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
